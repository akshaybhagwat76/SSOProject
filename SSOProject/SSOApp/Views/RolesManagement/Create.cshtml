@model SSOApp.Proxy.Response<SSOApp.API.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card-header">
        <h1>Add Role</h1>
    </div>
    <br />
    <div>
        <b>@Model.PageSubheading</b>
    </div>
    <br />
    <form asp-controller="RolesManagement" asp-action="Edit" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly">
            <span>Please correct the following errors</span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Body.Name" class="control-label col-sm-2">Role Name:</label>
            <div class="col-sm-5">
                <input type="text" name="Name" class="form-control" value="@Model.Body.Name" required />
            </div>
            <input type="hidden" value="@Model.Body.TenantCode" />
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" name="btnSubmit" value="Save" class="btn btn-primary" />
                <a href="@Url.Content("~/RolesManagement/Index")"><input type="button" name="btnCancel" value="Cancel" class="btn btn-secondary" /></a>
            </div>
        </div>

    </form>
</div>
