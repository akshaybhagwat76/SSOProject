@model SSOApp.Models.SecureAPIReturnedModel
@{
    ViewData["Title"] = "Index";
    List<string> roles = ViewBag.Roles as List<string>;
    int count = 0;
}
<div class="container">
    <div class="card-header">
        <h2>Home @Context.User.Identity.Name</h2>
    </div>

    <div class="row">
        <h4>Web API result</h4>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email"><b>User ID:</b></label>
            <div class="col-sm-10">
               
                    @Model.User?.Id
                  
</div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email"><b>User Is Admin:</b></label>
            <div class="col-sm-10">
               
                    @(Model.UserInRole ? "Yes" : "No")
                   
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email"><b>User:</b></label>
            <div class="col-sm-10">
               @Model.User.FirstName @Model.User.LastName
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email"><b>Roles:</b></label>
            <div class="col-sm-10">
               
                    @foreach (var item in roles)
                    {
                        <text>@item @if (count != roles.Count - 1) {<text>,</text> }</text>
                        count++;
                    }
                
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email"><b>Tenant:</b></label>
            <div class="col-sm-10">
               
                    @Model.Tenant.Name (CODE : @Model.Tenant.Code)
               
            </div>
        </div>
    </div>
</div>